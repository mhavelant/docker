{
  "name": "bergil/docker-behat",
  "minimum-stability": "stable",
  "require": {
    "behat/behat": "^3.0",
    "behat/mink": "^1.0",
    "behat/mink-goutte-driver": "^1.0",
    "behat/mink-selenium2-driver": "^1.0",
    "drupal/drupal-extension": "^3.0",
    "guzzlehttp/guzzle": "^6.0",
    "phpunit/phpunit": "^5.0",
    "fzaninotto/faker": "^1.0",
    "bossa/phpspec2-expect": "^2.0",
    "vanare/behat-cucumber-json-formatter": "^1.0",
    "ciaranmcnulty/behat-stepthroughextension": "^1.0",
    "behat/mink-extension": "^2.0",
    "facebook/webdriver": "^1.6",
    "bex/behat-screenshot": "^1.2",
    "sensiolabs/behat-page-object-extension": "^2.0",
    "novaway/common-contexts": "^2.0"
  },
  "suggest": {
    "ext-fileinfo": "The bex/behat-screenshot requires this for clear_screenshot_directory.",
    "ext-imagick": "The bex/behat-screenshot requires this for screenshot_taking_mode.",
    "ext-pcntl": "Drush suggests this.",
    "ext-posix": "Ext ext-pcntl will be happier with this."
  },
  "autoload": {
    "psr-4": {
      "DockerBehat\\Custom\\": "src/"
    }
  },
  "config": {
    "bin-dir": "bin/"
  }
}
